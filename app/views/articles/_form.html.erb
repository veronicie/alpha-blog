<div class="container">

  <%= render 'shared/errors' %>


    
  <%= form_with(model: @article, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
    </div>
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
    </div>
    <button type="submit" class="btn btn-warning">Submit</button>
  <% end %>

  
  <p class="mt-4"><%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-warning" %></p>
  
</div>