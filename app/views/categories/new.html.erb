<h1 class="mt-4 mb-4 text-center">Create a new category</h1>

<div class="container">

  <%= render 'shared/errors', obj: @category %>
    
  <%= form_with(model: @category, local: true) do |f| %>

    <div class="mb-3">
      <%= f.label :name, "Category name", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
    </div>

    <div class="mt-4">
      <%= f.submit class: "btn btn-warning" %>
    </div>

  <% end %>

  
  <p class="mt-4"><%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-warning" %></p>
  
</div>