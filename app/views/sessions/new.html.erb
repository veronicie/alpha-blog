<h1 class="text-center mt-4">Log in</h1>

<div class="container">
    
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %> 

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Log in", class: "btn btn-warning" %>
    </div>

  <% end %>

  
  <p class="mt-4"><%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-warning" %></p>
  
</div>